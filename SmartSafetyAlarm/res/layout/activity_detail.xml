<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@android:color/white"
    tools:context="com.smartsafety.smartsafetyalarm.view.DetailActivity" >

    
  	<RelativeLayout 
        android:id="@+id/menuBar"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >
        
  	    <TextView android:id="@+id/titleText"
  	        android:layout_width="match_parent"
  	        android:layout_height="wrap_content"
  	        android:layout_alignParentLeft="true"
            android:text="안전관리 점검 확인 페이지"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
  	<RelativeLayout android:id="@+id/contentLayer"
  	    android:layout_below="@+id/menuBar"
  	    android:layout_width="match_parent"
  	    android:layout_height="match_parent">
  	    
  	    <TextView android:id="@+id/workTtitleText"
  	        android:layout_width="match_parent"
  	        android:layout_height="wrap_content"
  	        android:layout_alignParentLeft="true"
  	        android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
  	    
  	    
        <LinearLayout
            android:id="@+id/check1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/workTtitleText"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/chk1"
                android:layout_width="53px"
                android:layout_height="53px"
                android:src="@drawable/check" />

            <TextView
                android:id="@+id/chk1Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="TBM은 출력하였는가?"
                android:textColor="#3E3A39"
                android:textSize="16dp" />
        </LinearLayout>
  	    
		<LinearLayout
            android:id="@+id/check2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/check1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/chk2"
                android:layout_width="53px"
                android:layout_height="53px"
                android:src="@drawable/check" />

            <TextView
                android:id="@+id/chk2Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="PTW은 출력하였는가?"
                android:textColor="#3E3A39"
                android:textSize="16dp" />
        </LinearLayout>
  	    
		<LinearLayout
            android:id="@+id/check3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/check2"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/chk3"
                android:layout_width="53px"
                android:layout_height="53px"
                android:src="@drawable/check" />

            <TextView
                android:id="@+id/chk3Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="PUI은 출력하였는가?"
                android:textColor="#3E3A39"
                android:textSize="16dp" />
        </LinearLayout>
        
		<LinearLayout
            android:id="@+id/check4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/check3"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/chk4"
                android:layout_width="53px"
                android:layout_height="53px"
                android:src="@drawable/check" />

            <TextView
                android:id="@+id/chk4Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="사고 사례는 확인하였는가?"
                android:textColor="#3E3A39"
                android:textSize="16dp" />
        </LinearLayout>
		
		
		<Button 
    		    android:id="@+id/checkCompleteBtn"
    		    android:layout_below="@+id/check4"
    		    android:layout_width="wrap_content"
    		    android:layout_centerHorizontal="true"
    		    android:layout_height="40dp"
    		    android:layout_marginTop="10dp"
    		    android:paddingLeft="35dp"
    		    android:paddingRight="35dp"
    		    android:text="점검 확인"
    		    android:textSize="15dp"
    		    android:textColor="#3E3A39"
    		    android:textStyle="bold"
    		    android:background="@drawable/select_btn"/>

  	</RelativeLayout>
    
</RelativeLayout>
