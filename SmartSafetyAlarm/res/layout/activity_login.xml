<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="@android:color/white"
    tools:context="${packageName}.${activityClass}" >

   
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" >
        
    <ImageView 
        android:id="@+id/doosanLogo"
        android:src="@drawable/doosan"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="center"/>
    
     <RelativeLayout  
        		android:id="@+id/loginContentLayer"
                android:layout_below="@+id/doosanLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

        		<LinearLayout 
			        android:id="@+id/idLayer"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="75dp"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:text="아이디"
			            android:textColor="#3E3A39"
			            android:textSize="16dp"
			            android:textStyle="bold"/>
			        <EditText 
			            android:id="@+id/loginuseridTxt"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="10dp"
			            android:paddingLeft="5dp"
			            android:textColor="#3E3A39"
			            android:textSize="13dp"
			            android:singleLine="true"
			            android:paddingTop="5dp"
			            android:paddingBottom="5dp"
			            android:paddingRight="5dp"
			            android:background="@drawable/edit_text"/>
			    </LinearLayout>

	       		<LinearLayout 
			        android:id="@+id/passwordlayer"
			        android:layout_below="@+id/idLayer"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="75dp"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:textSize="16dp"
			            android:text="비밀번호"
			            android:textColor="#3E3A39"
			            android:textStyle="bold"/>
			        <EditText 
			            android:id="@+id/loginuserpwTxt"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="10dp"
			            android:paddingLeft="5dp"
			            android:textColor="#3E3A39"
			            android:password="true"
			            android:textSize="13dp"
			            android:paddingTop="5dp"
			            android:singleLine="true"
			            android:paddingBottom="5dp"
			            android:paddingRight="5dp"
			            android:background="@drawable/edit_text"/>
			    </LinearLayout>

	       		<Button 
	       		    android:id="@+id/loginBtn"
	       		    android:layout_below="@+id/passwordlayer"
	       		    android:layout_width="match_parent"
	       		    android:layout_height="40dp"
	       		    android:layout_marginTop="10dp"
	       		    android:text="로그인"
	       		    android:textSize="15dp"
	       		    android:textColor="#3E3A39"
	       		    android:textStyle="bold"
	       		    android:background="@drawable/select_btn"/>
	       		
	       		
	       		
     </RelativeLayout>
        
        
    </RelativeLayout>

    
    
  
    
</RelativeLayout>
